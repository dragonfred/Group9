<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true">

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="6dp"
	    android:orientation="vertical"
	    tools:context=".RestaurantActivity">
	  
	    <TextView
	        android:id="@+id/reviewRestaurantName"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/restaurant_name_text"
	        android:gravity="center"
	        android:padding="4dp"
	        android:textSize="20sp"
	        android:textColor="#FFFFFF">      
	    </TextView> 
   
	    <TextView
	        android:id="@+id/reviewRestaurantAddressText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/restaurant_address_text"
	        android:gravity="center"
	        android:padding="4dp"
	        android:textSize="16sp"
	        android:textColor="#FFFFFF">      
	    </TextView> 
		    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="center">
		    
		    <TextView
		        android:id="@+id/reviewPhoneNumber"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/restaurant_phone_number_text"
		        android:gravity="center"
		        android:padding="4dp"
		        android:textSize="16sp"
		        android:layout_marginBottom="15dp"
		        android:textColor="#FFFFFF">      
		    </TextView>
	    	  
			<RatingBar
		        android:id="@+id/overallRestaurantRating"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:isIndicator="true"
		        android:numStars="4"
		        android:stepSize="0.11"
		       	style="?android:attr/ratingBarStyleSmall"
		       	android:paddingLeft="2dp">
			</RatingBar>
		
		</LinearLayout>
	    	   
	    <ImageButton
		    android:id="@+id/MapButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="viewMapButtonHandler"
		    android:src="@drawable/map_button"
		    android:padding="4dp"
		    android:scaleType="fitXY"
		    android:layout_marginBottom="10dp"
			android:layout_gravity="center"
			android:background="@null">        
	    </ImageButton>

		<ImageButton
		    android:id="@+id/readReviewsButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="readReviewsButtonHandler"
		    android:src="@drawable/read_reviews_button"
		    android:padding="4dp"
		    android:scaleType="fitXY"
		    android:layout_marginBottom="10dp"
			android:layout_gravity="center"
			android:background="@null">        
	    </ImageButton>
		
	   	<ImageButton
		    android:id="@+id/writeReviewsButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="writeReviewsButtonHandler"
		    android:src="@drawable/write_review_button"
		    android:padding="4dp"
		    android:scaleType="fitXY"
		    android:layout_marginBottom="10dp"
			android:layout_gravity="center"
			android:background="@null">        
	    </ImageButton>

	   	<ImageButton
		    android:id="@+id/checkInButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="checkInButtonHandler"
		    android:src="@drawable/check_in_on_facebook_button"
		    android:padding="4dp"
		    android:scaleType="fitXY"
			android:layout_gravity="center"
			android:background="@null">        
	    </ImageButton>		
		
	</LinearLayout>

</ScrollView>