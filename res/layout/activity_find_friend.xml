<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true"
    android:background="#FFFFFF">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="6dp"
	    tools:context=".FindFriendActivity">
	
	    <TextView
	        android:id="@+id/findFriendTitle"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:padding="8dp"
	        android:textSize="24sp"
	        android:layout_marginBottom="15dp"
	        android:text="@string/find_friend_text"
	        android:textColor="#000000">
	    </TextView>
	    
	    <EditText
	        android:id="@+id/UsernameSearch"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="@string/username_search_text"
	        android:inputType="text"
	        android:padding="4dp"
	        android:layout_gravity="center"
	        android:layout_marginBottom="10dp"
	        android:ems="20"
	        android:textColor="#000000">
	    </EditText>
	
		<ImageButton
		    android:id="@+id/FriendSearchButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="friendSearchButtonHandler"
		    android:src="@drawable/search_button"
		    android:padding="4dp"
		    android:scaleType="fitXY"
			android:layout_gravity="center"
			android:background="@null">
		</ImageButton>
	    
	</LinearLayout>
	
</ScrollView>