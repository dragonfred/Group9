<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true"
    android:background="#FFFFFF">

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:padding="6dp"
	    tools:context=".ManageAccountActivity" >
	
	    <TextView
	        android:id="@+id/manageAccountTitle"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:padding="8dp"
	        android:textSize="24sp"
	        android:layout_marginBottom="15dp"
	        android:text="@string/manage_account_title"
	        android:textColor="#000000">
	    </TextView>
	    
	    <EditText
	        android:id="@+id/oldPasswordText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:inputType="textPassword"
	        android:hint="@string/password_text"
	        android:ems="20"
	        android:layout_marginBottom="5dp"
	        android:layout_gravity="center"
	        android:padding="4dp"
	        android:textColor="#000000">
	    </EditText>
	    
	    <EditText
	        android:id="@+id/newPasswordText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="@string/new_password_text"
	        android:inputType="textPassword"
	        android:layout_gravity="center"
	        android:layout_marginBottom="5dp"
	        android:ems="20"
	        android:padding="4dp"
	        android:textColor="#000000">
	    </EditText>
	    
	    <EditText
	        android:id="@+id/newPasswordConfirmText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="@string/new_password_confirm_text"
	        android:inputType="textPassword"
	        android:layout_gravity="center"
	        android:layout_marginBottom="10dp"
	        android:ems="20"
	        android:padding="4dp"
	        android:textColor="#000000">
	        
	    </EditText>
	
		<ImageButton
		    android:id="@+id/updatePasswordButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="updatePasswordButtonHandler"
		    android:src="@drawable/update_password_button"
		    android:padding="4dp"
			android:layout_gravity="center"
			android:background="@null" >
		</ImageButton>
		
		<EditText
	        android:id="@+id/oldEmailText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="@string/email_text"
	        android:inputType="textEmailAddress"
	        android:layout_gravity="center"
	        android:layout_marginTop="10dp"
		    android:layout_marginBottom="5dp"
		    android:ems="20"
		    android:padding="4dp"
		    android:textColor="#000000" >
	    </EditText>
	    
		<EditText
	        android:id="@+id/newEmailText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="@string/new_email_text"
	        android:inputType="textEmailAddress"
	        android:layout_gravity="center"
		    android:layout_marginBottom="5dp"
		    android:ems="20"
		    android:padding="4dp"
		    android:textColor="#000000" >
	    </EditText>
	    
		<EditText
		    android:id="@+id/newEmailConfirmText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:hint="@string/new_email_confirm_text"
		    android:inputType="textEmailAddress"
		    android:layout_gravity="center"
		    android:layout_marginBottom="10dp"
		    android:ems="20"
		    android:padding="4dp"
		    android:textColor="#000000" >

	    </EditText>
	    
		<ImageButton
		    android:id="@+id/updateEmailButton"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="updateEmailButtonHandler"
		    android:src="@drawable/update_password_button"
		    android:padding="4dp"
			android:layout_gravity="center"
			android:background="@null">
		</ImageButton>
	    
	</LinearLayout>
</ScrollView>
