<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="6dp"
	    android:orientation="vertical"
	    tools:context=".WriteReviewActivity" >
	
	    <TextView
	       android:id="@+id/RestaurantNameText"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:text="@string/restaurant_name_text"
	       android:textSize="20sp"
	       android:gravity="center"
	       android:padding="4dp">      
	   </TextView> 
	   
	   <TextView
	       android:id="@+id/RestaurantAddressText"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:text="@string/restaurant_address_text"
	       android:gravity="center"
	       android:padding="4dp">      
	   </TextView> 
	  
	    <TextView
	       android:id="@+id/RestaurantPhoneNumberText"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:text="@string/restaurant_phone_number_text"
	       android:gravity="center"
	       android:padding="4dp">      
	   </TextView> 
	  
	    <EditText
	        android:id="@+id/ReviewText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:hint="@string/review_text"
	        android:inputType="textMultiLine"
	        android:maxLength="200"
	        android:lines="5"
	        android:padding="4dp">
	    </EditText>
	  	    		
	    <TextView
	        android:id="@+id/CharsLeftText"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/chars_left_text"
	        android:padding="2dp"
	        android:gravity="left">
	    </TextView>
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:gravity="center">
	    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center">
		                
			    <TextView
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="@string/taste_rating_text"
			        android:padding="2dp"
			        android:gravity="center"
			        android:layout_weight="3">
			    </TextView>
			    
			    <RatingBar
			        android:id="@+id/tasteRating"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:numStars="4"
			        android:gravity="center"
			        android:stepSize="0.5">
			    </RatingBar>
			   
			</LinearLayout>
	
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:gravity="center">
		    		
			    <TextView
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="@string/service_rating_text"
			        android:padding="2dp"
			        android:gravity="center"
			        android:layout_weight="3">
			    </TextView>
			    
			    <RatingBar
		   	        android:id="@+id/serviceRating"
		   	        android:layout_width="wrap_content"
		   	        android:layout_height="wrap_content"
		   	        android:numStars="4"
		   	        android:gravity="center"
		   	        android:stepSize="0.5">
		   	    </RatingBar>
			    
			</LinearLayout>
			
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		      	android:orientation="horizontal"
		      	android:gravity="center">
			    
			    <TextView
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="@string/cleanliness_rating_text"
			        android:padding="2dp"
			        android:gravity="center"
			        android:layout_weight="3">
			    </TextView>
			    
			    <RatingBar
			        android:id="@+id/cleanlinessRating"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:numStars="4"
			        android:stepSize="0.5">
			    </RatingBar>
			    
			</LinearLayout>
			
		   	<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		      	android:orientation="horizontal"
		      	android:gravity="center">
		    	
		    	<TextView
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:text="@string/overall_rating_text"
			        android:padding="2dp"
			        android:gravity="center"
			        android:layout_weight="3">
			    </TextView>		
			    
				<RatingBar
			        android:id="@+id/overallRating"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:isIndicator="true"
			        android:numStars="4"
			        android:stepSize="0.11">
			    </RatingBar>
				   	
			</LinearLayout>	
	   
		<ImageView
		    android:id="@+id/DisplayImageView"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="4dp" 
		    android:scaleType="fitXY">

		</ImageView>  	
		   	
	    </LinearLayout>
	    
	    <Button
	        android:id="@+id/CapturePictureButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/add_picture_button"
	        android:onClick="capturePictureButtonHandler">
	    </Button>
	
	    <Button
	        android:id="@+id/SubmitReviewButton"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/submit_review_button"
	        android:onClick="submitReviewButtonHandler">
	   	</Button>
	
	    <Button
	        android:id="@+id/PostToFacebook"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/post_to_facebook_button"
	        android:onClick="postToFacebookButtonHandler">
	   	</Button>
	   	
	</LinearLayout>

</ScrollView>